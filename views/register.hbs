<h1 class="text-center my-5">Registro de usuarios nuevos</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form action="/auth/register" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <input type="text" name="userName" class="form-control mb-2" placeholder="ingrese su nombre" />
            <input type="text" name="email" class="form-control mb-2" placeholder="ingrese su email" />
            <input type="password" name="password" class="form-control mb-2" placeholder="ingrese su password" />
            <input type="password" name="repassword" class="form-control mb-2" placeholder="confirme su password" />
            <button class="btn btn-primary" type="submit">Registrar usuarios</button>
        </form>
    </div>
</div>